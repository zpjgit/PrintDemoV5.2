<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.printer.demo"
    android:versionCode="1"
    android:versionName="5.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.hardware.usb.host" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature android:name="android.permission.WRITE_SETTINGS" />

    <application
        android:name="com.printer.demo.DemoApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:name="com.printer.demo.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.printer.demo.SettingActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.printer.demo.PicturePrintActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize" />
        <activity android:name="com.printer.demo.TextPrintActivity" />
        <activity
            android:name="com.printer.demo.BarcoePrintActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.printer.demo.BluetoothDeviceList"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name="com.printer.demo.UsbDeviceList"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name="com.printer.demo.MipcaActivityCapture"
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>
        <activity
            android:name="com.printer.demo.PdfActivity"
            android:label="@string/title_activity_pdf_print" >
        </activity>
        <activity
            android:name="com.printer.demo.LablePrintActivity"
            android:label="@string/title_activity_lable_print" >
        </activity>
        <activity
            android:name="com.printer.demo.SerialsDeviceList"
            android:label="@string/title_activity_lable_print" >
        </activity>
        <activity
            android:name="com.printer.demo.IpEditActivity"
            android:theme="@style/MyDialogStyle" />
        <activity
            android:name="com.printer.demo.AboutUsActivity"
            android:label="@string/title_activity_about_us" >
        </activity>
        <activity
            android:name="com.printer.demo.SplashActivity"
            android:label="@string/title_activity_splash" >
        </activity>
        <activity
            android:name="com.printer.demo.MaterialTransportActivity"
            android:label="@string/title_activity_material_transport"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.printer.demo.TestTCP"
            android:label="@string/title_activity_test_tcp" >
        </activity>
        <activity
            android:name="com.printer.demo.MainActivitya"
            android:label="@string/title_activity_main_activitya" >
        </activity>
    </application>

</manifest>